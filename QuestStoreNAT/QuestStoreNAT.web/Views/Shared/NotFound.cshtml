@model System.Int32

@{
    ViewBag.Title = "Not Found";
}

<h3 class="margin10 margin50top">@ViewBag.ErrorMessage</h3>
<h3 class="margin10">@ViewBag.Path</h3>
<h3 class="margin10">@ViewBag.QueryString</h3>

@if (Model != 0)
{
    <div class="margin10">
        <h3>Quest with Id: @Model was not found!</h3>
    </div>
}

<div class="margin10 margin50bottom margin50top"><a asp-action="index" asp-controller="home" class="info-box">Click here to navigate to the home page</a></div>
