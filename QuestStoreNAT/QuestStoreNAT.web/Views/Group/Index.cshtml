@model IEnumerable<Group>

@{
    ViewData["Title"] = "ViewAllGroups";
}

<div class="landing">

    <partial name="~/Views/Shared/_SidebarMenu.cshtml">

        <div id="landing__content" class="landing__content">

            @foreach (var group in Model)
            {
                <div class="show-all_box">
                    <div class="show-all_user padding20top">
                        <h3 class="questreward__cost">@group.Name</h3>
                        <h3 class="questreward__cost">@group.GroupWallet CC</h3>
                        <br />
                        <div class="admin-controll">
                            <a asp-action="Edit" asp-route-id="@group.Id" class="dropdown__button dropdown--margin">Edit</a>
                            <a asp-action="Delete" asp-route-id="@group.Id" class="dropdown__button dropdown--margin">Delete</a>
                        </div>
                    </div>
                </div>
            }

            <div id="dividerh3" class="landing__content__wrapper margin50top">
                <a asp-action="Create" class="dropdown__button dropdown--margin">Add Group</a>
            </div>
        </div>
</div>
