@model QuestStoreNAT.web.Models.Group

@{
    ViewData["Title"] = "DeleteGroup";
}

<div class="landing">

    <partial name="~/Views/Shared/_SidebarMenu.cshtml">

        <div id="landing__content" class="landing__content landing__content-justify ">

            <h3 class="delete-title">Are you sure you want to delete this group?</h3>

            <div class="hero-landing">
                <div class="questreward">
                    <h3 class="questreward__cost padding20">@Model.Name</h3>
                    <h3 class="questreward__cost padding20">@Model.GroupWallet CC</h3>
                </div>
                <form asp-action="Delete" asp-controller="Group" method="post">
                    @Html.HiddenFor(m => m.Id)
                    <input type="submit" value="Delete" class="dropdown__button" />
                </form>
                <input class="dropdown__button" type="button" value="No -> go back!" onclick="location.href='@Url.Action("Index", "Group")'" />

            </div>
        </div>
</div>
